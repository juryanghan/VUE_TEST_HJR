<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jti.event.admin.mapper.event.board.EventBoardMapper">

    <!-- 이벤트 Count -->
    <select id="countEventBoard" parameterType="EventBoardParam" resultType="int" >
        SELECT
                COUNT(a.event_no)
        FROM
                tb_event as a

        WHERE 1=1

        <if test="searchCustName_Encrypt != null and searchCustName_Encrypt != ''">
            AND
            a.name LIKE CONCAT('%', #{searchCustName_Encrypt}, '%')
        </if>
        <if test="searchTelNum_Encrypt != null and searchTelNum_Encrypt != ''">
            AND
            a.tel_num LIKE CONCAT('%', #{searchTelNum_Encrypt}, '%')
        </if>
        <if test="searchEmail_Encrypt != null and searchEmail_Encrypt != ''">
            AND
            a.email LIKE CONCAT('%', #{searchEmail_Encrypt}, '%')
        </if>
        <if test="searchKeywordFrom != null and searchKeywordFrom != ''">
            <if test="searchKeywordTo != null and searchKeywordTo != ''">
                AND a.reg_dt between #{searchKeywordFrom} AND CONCAT(#{searchKeywordTo},' 23:59:59')
            </if>
        </if>
        <if test="searchOpenType != null and searchOpenType != ''">
            AND a.open_yn  = #{searchOpenType}
        </if>
    </select>

    <!-- 이벤트 정보 목록 -->
    <select id="listEventBoard" parameterType="EventBoardParam" resultType="EventBoard" >
        SELECT
                a.event_no as eventNo,
                a.name as name,
                a.tel_num as telNum,
                a.email as email,
                a.image_url as imageUrl,
                a.title as title,
                a.content as content,
                a.reg_dt as regDt,
                a.open_yn as openYn,
                a.origin_name as originName
        FROM
                tb_event AS a
        WHERE 1=1
        <if test="searchCustName_Encrypt != null and searchCustName_Encrypt != ''">
            AND
             a.name LIKE CONCAT('%', #{searchCustName_Encrypt}, '%')
        </if>
        <if test="searchTelNum_Encrypt != null and searchTelNum_Encrypt != ''">
            AND
            a.tel_num LIKE CONCAT('%', #{searchTelNum_Encrypt}, '%')
        </if>
        <if test="searchEmail_Encrypt != null and searchEmail_Encrypt != ''">
            AND
            a.email LIKE CONCAT('%', #{searchEmail_Encrypt}, '%')
        </if>
        <if test="searchKeywordFrom != null and searchKeywordFrom != ''">
            <if test="searchKeywordTo != null and searchKeywordTo != ''">
                AND a.reg_dt between #{searchKeywordFrom} AND CONCAT(#{searchKeywordTo},' 23:59:59')
            </if>
        </if>
        <if test="searchOpenType != null and searchOpenType != ''">
            AND a.open_yn  = #{searchOpenType}
        </if>
        ORDER BY event_no DESC
        LIMIT #{firstRecordIndex}, #{lastRecordIndex}
    </select>

    <!--이벤트 참여 처리 -->
    <update id="updateEventProcess" parameterType="EventBoard">
        UPDATE
                tb_event
        SET
                open_yn = 'Y',
                upt_dt =now()
        WHERE
                event_no = #{eventNo}
        AND
                open_yn = 'N'
    </update>


</mapper>